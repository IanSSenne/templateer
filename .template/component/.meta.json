{
  "insertAt": "dsrc/components/$Name",
  "fileGroups": {
    "true": ["$Name.tsx"],
    "$Styles": ["$Name.module.scss"]
  },
  "postCreationActions": [
    "node \"$Root/post-create.js\" \"$Target\" \"$Name\""
  ],
  "prompts": [
    {
      "type": "text",
      "name": "Name",
      "message": "What is the name of the component?"
    },
    {
      "type": "confirm",
      "name": "Styles",
      "message": "Do you want to create a styles file?",
      "initial": true
    }
  ],
  "defaultPlaceholders": {}
}
